config BR2_PACKAGE_LIBRSVG
	bool "hiRsvg (librsvg derivative for hybridos)"
	depends on BR2_USE_WCHAR # glib2
	depends on BR2_TOOLCHAIN_HAS_THREADS # glib2
	depends on BR2_USE_MMU # glib2
	depends on BR2_INSTALL_LIBSTDCPP # pango
	depends on BR2_TOOLCHAIN_HAS_SYNC_4 # pango -> harfbuzz
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_4_8 # pango -> harfbuzz
	select BR2_PACKAGE_MINIGUI
	select BR2_PACKAGE_HICAIRO
	select BR2_PACKAGE_LIBCROCO
	select BR2_PACKAGE_LIBGLIB2
	select BR2_PACKAGE_LIBXML2
	select BR2_PACKAGE_PANGO
	help
	  The Librsvg Derivative for HybridOS
	  https://hybridos.fmsoft.cn

	  The rsvg library is an efficient renderer for Scalable
	  Vector Graphics (SVG) pictures.

	  https://wiki.gnome.org/Projects/LibRsvg

comment "hirsvg needs a toolchain w/ wchar, threads, C++, gcc >= 4.8"
	depends on BR2_USE_MMU
	depends on BR2_TOOLCHAIN_HAS_SYNC_4
	depends on !BR2_USE_WCHAR || !BR2_TOOLCHAIN_HAS_THREADS || \
		!BR2_TOOLCHAIN_GCC_AT_LEAST_4_8 || \
		!BR2_INSTALL_LIBSTDCPP
