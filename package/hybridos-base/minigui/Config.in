config BR2_PACKAGE_MINIGUI
	bool "MiniGUI (2.9 MB)"
    default y
	select BR2_PACKAGE_JPEG
	select BR2_PACKAGE_LIBPNG
	select BR2_PACKAGE_FREETYPE
    select BR2_PACKAGE_HARFBUZZ
    select BR2_PACKAGE_PIXMAN
    select BR2_PACKAGE_LIBDRM
    select BR2_PACKAGE_MINIGUI_RES
	help
          http://www.minigui.org


if BR2_PACKAGE_MINIGUI
choice
    prompt "target board name"
    default BR2_PACKAGE_MINIGUI_TARGET_NAME_UNKNOW
    help
      Select the version of glibc you wish to use.

config BR2_PACKAGE_MINIGUI_TARGET_NAME_UNKNOW
    bool "unknown"

config BR2_PACKAGE_MINIGUI_TARGET_NAME_R818
    bool "r818"

endchoice
endif
