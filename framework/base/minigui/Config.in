      Select the MiniGUI runmode.

config BR2_PACKAGE_MINIGUI_RUNMODE_PROCS
    bool "procs"

config BR2_PACKAGE_MINIGUI_RUNMODE_THS
    bool "ths"

config BR2_PACKAGE_MINIGUI_RUNMODE_SA
    bool "sa"

endchoice

endif
